<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/appLightGreen</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primaryAppGreen</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accentDark</item>
        <item name="android:textColor">@color/accentDark</item>
        <item name="android:textColorSecondary">#525252</item>
    </style>

</resources>
