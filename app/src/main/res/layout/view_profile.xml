<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/appLightGreen"
        app:cardElevation="8dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:padding="16dp">
            <ImageView
                android:layout_width="52dp"
                android:id="@+id/avatar_imgView"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_height="52dp" />

            <TextView
                android:id="@+id/username_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="Username"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="..."
                android:textSize="18sp" />

            <CheckBox
                android:text="hireable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hireable_checkBox"
                android:clickable="false"
                android:checked="false" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1">

                    <TextView
                        android:text="Following"
                        android:layout_height="wrap_content"
                        android:id="@+id/following_txtView"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fwingCount_txtView"
                        android:textStyle="bold"
                        android:layout_below="@+id/following_txtView"
                        android:elevation="21dp"
                        android:layout_centerInParent="false"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1">

                    <TextView
                        android:text="Followers"
                        android:layout_height="wrap_content"
                        android:id="@+id/followers_txtView"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fwerCount_txtView"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_below="@+id/followers_txtView"
                        android:layout_centerInParent="false"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1">

                    <TextView
                        android:text="Repos"
                        android:layout_height="wrap_content"
                        android:id="@+id/repos_txtView"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/reposCount_txtView"
                        android:textStyle="bold"
                        android:layout_below="@+id/repos_txtView"
                        android:layout_centerInParent="false"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1">

                    <TextView
                        android:text="Gists"
                        android:layout_height="wrap_content"
                        android:id="@+id/gists_textVIew"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/gistsCount_txtView"
                        android:textStyle="bold"
                        android:layout_below="@+id/gists_textVIew"
                        android:layout_centerInParent="false"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</merge>