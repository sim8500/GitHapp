<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/container">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/author_txtView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="false"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:text="qwertyZ"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/date_txtView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="false"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:text="pretty time"
                    android:textColor="#A3B35E" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/comment_txtView"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-condensed"
                android:layout_alignParentRight="false"
                android:text="qwertyz qwertyz qwe rty z qwer ty z qwerty."
                android:textColor="@android:color/black"
                android:layout_below="@+id/container"
                android:padding="5dp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/separator"
            android:background="#A3B35E" />
    </LinearLayout>
</merge>